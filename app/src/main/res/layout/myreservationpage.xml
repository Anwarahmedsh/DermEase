<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lighterbeige"
    android:padding="8dp">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="#FFFEFE"
        android:elevation="10dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAppointment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <!-- Contents of Card 1 -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewServiceType1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cosmetic"
                android:textColor="#0B0A0A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDoctorName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Abdullah Ahmed"
                android:textColor="#0B0A0A" />

            <TextView
                android:id="@+id/textViewDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 2024-03-27"
                android:textColor="#040303" />

            <TextView
                android:id="@+id/textViewTime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 14:00"
                android:textColor="#090909" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/buttonEdit1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#664229"
                    android:text="Edit Appointment"
                    android:textColor="#F8F4F4" />

                <Button
                    android:id="@+id/buttonDelete1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#8E0A00"
                    android:text="Delete Appointment"
                    android:textColor="#F8F3F3" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAppointment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewAppointment1"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <!-- Contents of Card 2 -->
        <LinearLayout
            android:id="@+id/linearLayou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView1cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dermal check-up"
                android:textColor="#0B0A0A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAppointmentDr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dr. Dina Hussam"
                android:textColor="#0B0A0A" />

            <TextView
                android:id="@+id/textViewAppointmentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 2024-03-23"
                android:textColor="#040303" /> <!-- Example static date -->

            <TextView
                android:id="@+id/textViewAppointmentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 19:00"
                android:textColor="#090909" /> <!-- Example static time -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/buttonEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#664229"
                    android:text="Edit Appointment"
                    android:textColor="#F8F4F4" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#8e0a00"
                    android:text="Delete Appointment"
                    android:textColor="#F8F3F3" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
